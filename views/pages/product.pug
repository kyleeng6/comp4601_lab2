html
	head
		link(rel='stylesheet' href='/styles.css')
		title Product Page 
body
	div#header
		br
		include ../partials/header	
		br

	div#product
		h1 #{product.name}
		h3 Price: $#{product.price.toFixed(2)}
		h3 Size: '#{product.dimensions.y} x #{product.dimensions.y} x #{product.dimensions.z}'
		h3 Stock: #{product.stock}
		br

		if (avgRating == -1)
			h4 Average Rating: No reviews yet
		else
			h4 Average Rating: #{avgRating.toFixed(2)}/10
		form
			label(for='rating') Submit your own review here:
			| &nbsp;
			select(name='rating', id='rating')
				option(value=1) 1
				option(value=2) 2
				option(value=3) 3
				option(value=4) 4
				option(value=5) 5
				option(value=6) 6
				option(value=7) 7
				option(value=8) 8
				option(value=9) 9
				option(value=10) 10
			| &nbsp;
			input(type='button' value='Submit Review' onclick='submitReview()')
			| &nbsp;
			input(type='button' value='View All Reviews' onclick='viewAllReviews()')
		br
		br
		br
		br

	div#footer
		br
		include ../partials/footer
		br
	
	script(src='/product.js')